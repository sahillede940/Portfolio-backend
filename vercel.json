{
  "version": 2,
  "builds": [
    {
      "src": "portfoliobackend/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": { "distDir": "staticfiles_build" }
    }
  ],
    "routes": [
        { "src": "/(.*)", "dest": "portfoliobackend/wsgi.py" },
        { "src": "/static/(.*)", "dest": "static/$1" }
    ]
}
